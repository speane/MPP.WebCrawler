<Window x:Class="MPP.WebCrawler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPP.WebCrawler"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="incButton" Content="Click to add 1" Command="{Binding IncrementCommand}" HorizontalAlignment="Left" Margin="370,258,0,0" VerticalAlignment="Top" Width="134"/>
        <Label x:Name="totalClicksTitleLabel" Content="Total clicks:" HorizontalAlignment="Left" Margin="370,283,0,0" VerticalAlignment="Top"/>
        <Label x:Name="totalClickLabel" Content="{Binding Count}" HorizontalAlignment="Left" Margin="444,283,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
